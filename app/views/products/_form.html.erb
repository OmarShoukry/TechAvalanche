<%= form_with model: product do |form| %>
    <div>
        <%= form.label :Name %><br>
        <%= form.text_field :name %>
        <% if not product.errors.full_messages_for(:name).empty? %>
            <div> Please input a valid product name </div>
        <% end %>
        <br>
    </div>

    <div>
        <%= form.label :Description %><br>
        <%= form.text_area :description %>
        <% if not product.errors.full_messages_for(:description).empty? %>
            <div>  Please input a valid description of your product </div>
        <% end %>
        <br>
    </div>

    <div>
        <%= form.label :Weight %><br>
        <%= form.number_field :weight %>
        <% if not product.errors.full_messages_for(:weight).empty? %>
            <div> Please input a valid weight for your product  </div>
        <% end %>
        <br>
    </div>

    <div>
        <%= form.label :Width %><br>
        <%= form.number_field :width %>
        <% if not product.errors.full_messages_for(:width).empty? %>
            <div> Please input a valid width for your product  </div>
        <% end %>
        <br>
    </div>

    <div>
        <%= form.label :Height %><br>
        <%= form.number_field :height %>
        <% if not product.errors.full_messages_for(:height).empty? %>
            <div> Please input a valid height for your product  </div>
        <% end %>
        <br>
    </div>

    <div>
        <%= form.label :Depth %><br>
        <%= form.number_field :depth %>
        <% if not product.errors.full_messages_for(:depth).empty? %>
            <div>  Please input a valid depth for your product </div>
        <% end %>
        <br>
    </div>

    <div>
        <%= form.submit %>
    </div>

<% end %>

