<%= form_with model: location do |form| %>
    <div>
        <%= form.label :Name %><br>
        <%= form.text_field :name %>
        <% if location.errors %>
            <div> Please input a valid location name </div>
        <% end %>
        <br>
    </div>

    <div>
        <%= form.label :"Address Line 1" %><br>
        <%= form.text_area :addressline1 %>
        <% if location.errors %>
            <div> Please input a valid Address </div>
        <% end %>
        <br>
    </div>

    <div>
        <%= form.label :"Address Line 2" %><br>
        <%= form.text_area :addressline2 %>
        <br>
    </div>

    <div>
        <%= form.label :Province %><br>
        <%= form.select :province, options_for_select(["Alberta", "British Columbia", "Manitoba", "New Brunswick", "Newfoundland and Labrador", "Northwest Territories", "Nova Scotia", "Nunavut", "Ontario", "Prince Edward Island", "Quebec", "Saskatchewan", "Yukon"]) %>
        <% if location.errors %>
            <div> Please choose a province </div>
        <% end %>
        <br>
    </div>

    <div>
        <%= form.label :City %><br>
        <%= form.text_field :city %>
        <% if location.errors %>
            <div> Please input a valid city </div>
        <% end %>
        <br>
    </div>

    <div>
        <%= form.label :"Postal Code" %><br>
        <%= form.text_field :postalcode %>
        <% if location.errors %>
            <div> Please input a valid Postal Code </div>
        <% end %>
        <br>
    </div>

    <div>
        <%= form.submit%>
    </div>

<% end %>

